<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 1200px;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(33.333% - 2rem), 1fr));
    gap: 2rem;
    padding: 0;
    margin: 0 -1rem;
  }

  .navbar {
    display: flex;
    justify-content: center;
    background-color: var(--accent);
    padding: 1rem;
    text-align: center;
    margin-bottom: 2rem;
  }

  .navbar button {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  .navbar button:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .link-card-grid {
      grid-template-columns: 1fr;
      margin: 0; /* Remove negative margin */
    }

    .link-card-grid > * {
      margin-bottom: 2rem; /* Add some spacing between cards on mobile */
    }
  }
</style>